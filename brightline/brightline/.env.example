NEXT_PUBLIC_R2_PUBLIC_URL=

# Hero video (R2 or CDN) — base URL for media assets
NEXT_PUBLIC_MEDIA_URL=
# Hero video key (e.g. videos/hero/intro-v1) — change to swap videos weekly
NEXT_PUBLIC_HERO_VIDEO_KEY=videos/hero/intro-v1

# Storage (S3)
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_BUCKET=
