# Storage (R2)
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET=
R2_ENDPOINT=
R2_REGION=auto
# Public URL for R2 objects (e.g. https://pub-xxx.r2.dev or custom domain)
R2_PUBLIC_URL=
