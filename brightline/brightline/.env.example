# Booking
NEXT_PUBLIC_CALENDLY_URL=

# Cloudflare Turnstile
NEXT_PUBLIC_TURNSTILE_SITE_KEY=
TURNSTILE_SECRET_KEY=

# Analytics (optional - use one or both)
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=
NEXT_PUBLIC_GA_ID=

# Site base URL for sitemap/robots (default: https://brightlinephotography.co)
